<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - project_airlines</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- My CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project_airlines.styles.css" asp-append-version="true" />
    <!-- Boxicons -->
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
	<style>
		/* CSS for the flexible container */
		.container {
			transition: padding-left 0.3s ease; /* Add padding-left transition */
		}

		/* CSS for when the sidebar is open */
		.sidebar-open .container {
			padding-left: 250px; /* Adjust left padding when sidebar is open */
		}
	</style>
</head>
<body>
    <div id="wrapper">
   

		<!-- SIDEBAR -->
		<section id="sidebar">
			<a href="#" class="brand">
				<img src="~/assets/logo.png" alt="Logo">
			</a>
			<ul class="side-menu top">
				<li class="active">
					<a asp-controller="Home" asp-action="Index">
						<i class='bx bxs-dashboard'></i>
						<span class="text">Dashboard</span>
					</a>
				</li>
				<li>
					<a asp-controller="Supplier" asp-action="Index">
						@*<i class='bx bxs-shopping-bag-alt'></i>*@
						<i class='bx bxs-group'></i>
						<span class="text">Suppliers</span>
					</a>
				</li>
				@*<li>
					<a href="#">
						<i class='bx bxs-doughnut-chart'></i>
						<span class="text">Analytics</span>
					</a>
				</li>
				<li>
					<a href="#">
						<i class='bx bxs-message-dots'></i>
						<span class="text">Message</span>
					</a>
				</li>
				<li>
					<a href="#">
						<i class='bx bxs-group'></i>
						<span class="text">Team</span>
					</a>
				</li>*@
			</ul>
			<ul class="side-menu">
				<li>
					<a href="#">
						<i class='bx bxs-cog'></i>
						<span class="text">Settings</span>
					</a>
				</li>
				<li>
					<a href="#" class="logout">
						<i class='bx bxs-log-out-circle'></i>
						<span class="text">Logout</span>
					</a>
				</li>
			</ul>
		</section>
		<!-- SIDEBAR -->
		<!-- NAVBAR -->
		<!-- CONTENT -->
		<section id="content">
			<nav>
				<i class='bx bx-menu'></i>
				<a href="#" class="nav-link">Categories</a>
				
				<input type="checkbox" id="switch-mode" hidden>
				<label for="switch-mode" class="switch-mode"></label>
				<a href="#" class="notification">
					<i class='bx bxs-bell'></i>
					<span class="num">8</span>
				</a>
				<a href="#" class="profile">
					<img src="~/assets/people.png" alt="Profile Image" />
				</a>
			</nav>
			<div class="container">
				<main role="main" class="pb-3">
					@RenderBody()
				</main>
			</div>
		</section>
		<!-- NAVBAR -->
    </div>
	

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - project_airlines - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
	<!-- JavaScript/jQuery to add 'sidebar-open' class when the sidebar is open -->
	<script>
		$(document).ready(function () {
			const menuBar = $('#content nav .bx.bx-menu');
			const container = $('.container');

			menuBar.click(function () {
				container.toggleClass('sidebar-open');
			});
		});
	</script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
